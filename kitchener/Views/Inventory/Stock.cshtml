
@{
    ViewBag.Title = "Add Stock";
    var placeholders = new List<string> { "Beets", "bears", "battlestar" };
}

<h2>Add Stock</h2>

<form method="post">
    <div class="form-group">
        <label for="itemName">Item Name</label>
        <select class="form-control" id="itemName" name="itemName">
            @foreach (var holder in placeholders)
            {
                <option>@holder</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="itemQuantity">Quantity</label>
        <input class="form-control" type="number" name="itemQuantity" id="itemQuantity" />
    </div>
</form>

