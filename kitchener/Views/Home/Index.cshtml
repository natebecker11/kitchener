@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Kitchener</h1>
    <p class="lead">What's for dinner? What to buy? Do they know things? Let's find out!</p>
</div>



<div class="row">
    <div class="col-12 col-md-4 mb-2">
        <div class="card">
            <div class="card-header">
                <h4>Add Inventory</h4>
            </div>
            <div class="card-body">
                <p>
                    Enter purchased items, or take a picture of a receipt to bulk enter.
                </p>
                <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301865">Go &raquo;</a></p>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-4 mb-2">
        <div class="card">
            <div class="card-header">
                <h4>Add Recipe</h4>
            </div>
            <div class="card-body">
                <p>
                    Add a recipe for a meal.
                </p>
                <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301865">Go &raquo;</a></p>
            </div>
        </div>        
    </div>
    <div class="col-12 col-md-4 mb-2">
        <div class="card">
            <div class="card-header">
                <h4>Cook Recipe</h4>
            </div>
            <div class="card-body">
                <p>
                    Cook a recipe, decrementing ingredient levels in inventory.
                </p>
                <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301865">Go &raquo;</a></p>
            </div>
        </div>
     </div>
</div>

<div class="row">
    <div class="col-12 col-md-4 mb-2">
        <div class="card">
            <div class="card-header">
                <h4>Add SKUs</h4>
            </div>
            <div class="card-body">
                <p>
                    Add additional Trader Joe's products to the product database.
                </p>
                <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301865">Go &raquo;</a></p>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-4 mb-2">
        <div class="card">
            <div class="card-header">
                <h4>Generate Shopping List</h4>
            </div>
            <div class="card-body">
                <p>
                    Generate a shopping list by selecting which recipes to cook for the week.
                </p>
                <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301865">Go &raquo;</a></p>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-4 mb-2">
        <div class="card">
            <div class="card-header">
                <h4>View/Audit Full Inventory</h4>
            </div>
            <div class="card-body">
                <p>
                    See what is currently in inventory, and validate against actual physical inventory.
                </p>
                <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301865">Go &raquo;</a></p>
            </div>
        </div>
    </div>        
</div>